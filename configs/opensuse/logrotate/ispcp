# Rotation for user logs for ispCP traffic count
#
/var/log/apache2/users/*.log {
  weekly
  missingok
  rotate 52
  compress
  delaycompress
  notifempty
  create 640 root root
  sharedscripts
  prerotate
    /srv/www/ispcp/engine/traffic/ispcp-srv-traff &>/var/log/ispcp/ispcp-srv-traff.log
  endscript
  postrotate
    if [ -f "`. /etc/apache2/envvars ; echo ${APACHE_PID_FILE:-/var/run/apache2.pid}`" ]; then
      /etc/init.d/apache2 reload > /dev/null
    fi
  endscript
}

# Rotation for user traffic prevs
#
/var/log/apache2/backup/*.log.prev {
  size 5M
  missingok
  rotate 5
  compress
  delaycompress
  notifempty
  create 640 root root
}

# Rotation for apache2, launching general statistics if awstats is installed
#
/var/log/apache2/*.log {
  weekly
  missingok
  rotate 52
  compress
  delaycompress
  notifempty
  create 640 root root
  sharedscripts
  prerotate
    if [ `cat /etc/ispcp/ispcp.conf | grep -c "AWSTATS_ACTIVE = yes"` == 1 ]; then
          perl /srv/www/ispcp/engine/awstats/awstats_updateall.pl now -awstatsprog=/usr/lib/cgi-bin/awstats.pl &> /dev/null
    fi
  endscript
  postrotate
    if [ -f "`. /etc/apache2/envvars ; echo ${APACHE_PID_FILE:-/var/run/apache2.pid}`" ]; then
           /etc/init.d/apache2 reload > /dev/null
    fi
  endscript
}

# Transfer rotation for ProFTPd
#
/var/log/proftpd/xferlog {
  daily
  rotate 7
  missingok
  compress
  delaycompress
  postrotate
    if [ -e /var/run/syslog-ng.pid ]; then
      /usr/bin/killall -HUP syslog-ng
    elif [ -e /var/run/rsyslogd.pid ]; then
      /usr/bin/killall -HUP rsyslogd
    fi
  endscript
}

# ProFTPd traffic rotation for ispCP traffic count
#
/var/log/proftpd/ftp_traff.log {
  daily
  rotate 7
  missingok
  compress
  delaycompress
  prerotate
    /srv/www/ispcp/engine/traffic/ispcp-vrl-traff-SUSE > /var/log/ispcp/ispcp-vrl-traff.log
  endscript
  postrotate
    if [ -e /var/run/syslog-ng.pid ]; then
      /usr/bin/killall -HUP syslog-ng
    elif [ -e /var/run/rsyslogd.pid ]; then
      /usr/bin/killall -HUP rsyslogd
    fi
  endscript
}
