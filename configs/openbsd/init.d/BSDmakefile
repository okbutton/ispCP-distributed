.include <../../../../Makefile.inc>

install:

	$(SYSTEM_MAKE_DIRS) $(ROOT_CONF)/init.d

	cp ispcp_daemon $(ROOT_CONF)/ispcp_daemon.rc
	cp ispcp_network $(ROOT_CONF)/ispcp_network.rc

	chown root:wheel $(ROOT_CONF)/ispcp_network.rc $(ROOT_CONF)/ispcp_daemon.rc
	chmod 0755 $(ROOT_CONF)/ispcp_network.rc $(ROOT_CONF)/ispcp_daemon.rc

uninstall:

	rm -f $(ROOT_CONF)/ispcp_daemon.rc
	rm -f $(ROOT_CONF)/ispcp_network.rc
