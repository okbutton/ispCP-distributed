/var/log/apache2/users/*.log {
	weekly
	missingok
	rotate 52
	compress
	delaycompress
	notifempty
	create 644 root root
	sharedscripts
	prerotate
		/srv/www/ispcp/engine/traffic/ispcp-srv-traff &>/var/log/ispcp/ispcp-srv-traff.log
	endscript
	postrotate
	if [ -f /var/run/httpd2.pid ]; then
		/etc/init.d/apache2 reload > /dev/null
	fi
	endscript
}
