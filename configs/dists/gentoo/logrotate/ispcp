/var/log/apache2/users/*.log {
	weekly
	missingok
	rotate 52
	compress
	delaycompress
	notifempty
	create 640 root adm
	sharedscripts
	prerotate
		/var/www/ispcp/engine/traffic/ispcp-srv-traff &>/var/log/ispcp/ispcp-srv-traff.log
	endscript
	postrotate
	if [ -f /var/run/apache2.pid ]; then
		/etc/init.d/apache2 reload > /dev/null
	fi
	endscript
}
/var/log/proftpd/xferlog {
  daily
  rotate 7
  missingok
  compress
  delaycompress
  postrotate
    /usr/bin/killall -HUP syslogd
  endscript
}

/var/log/proftpd/ftp_traff.log {
  daily
  rotate 7
  missingok
  compress
  delaycompress
  prerotate
    /var/www/engine/traffic/ispcp-vrl-traff &> /var/log/ispcp-vrl-traff.log
  endscript
  postrotate
    /usr/bin/killall -HUP syslogd
  endscript
}
