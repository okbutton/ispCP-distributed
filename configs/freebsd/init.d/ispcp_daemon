### BEGIN INIT INFO
# Provides:             ispcp_daemon
# Required-Start:       $network $local_fs $remote_fs
# Required-Stop:
# Should-Stop:          $local_fs
# Default-Start:        2 3 4 5
# Default-Stop:         0 1 6
# Short-Description:    ispCP GUI-Backend communication Daemon
### END INIT INFO
# Note: do not modify any of these vars here, use /etc/default/$NAME instead

PATH=/sbin:/bin:/usr/sbin:/usr/bin
DAEMON=/usr/local/www/ispcp/daemon/ispcp_daemon
PID=/var/run/ispcp-daemon.pid
NAME=ispcp_daemon
DESC=ispcp_daemon


test -f $DAEMON || exit 0

set -e

case "$1" in
  start)
	echo -n "Starting $DESC: "
	$DAEMON -p $PID
	echo "$NAME."
	;;
  stop)
	echo -n "Stopping $DESC: "
	kill -9 `cat $PID`
        rm -f $PID
	echo "$NAME."
	;;
  restart|force-reload)
	$0 stop
	$0 start
	echo "$NAME."
	;;
	
  *)
	echo "Usage: $0 {start|stop|restart|force-reload}" >&2
	exit 1
	;;
esac

exit 0
