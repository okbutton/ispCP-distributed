/var/log/apache2/users/*.log {
	weekly
	missingok
	rotate 52
	compress
	delaycompress
	notifempty
	create 640 root adm
	sharedscripts
	prerotate
		/var/www/ispcp/engine/traffic/ispcp-srv-traff &>/var/log/ispcp/ispcp-srv-traff.log
	endscript
	postrotate
	for i in `seq 1 10`;
		if [ -f /var/run/apache2.pid ]; then
			/etc/init.d/apache2 stop > /dev/null
			sleep 5
			/etc/init.d/apache2 start > /dev/null
		fi
	done
	endscript
}
