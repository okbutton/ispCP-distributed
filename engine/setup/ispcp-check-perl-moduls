my @needed = (strict, warnings, IO::Socket, DBI, DBD::mysql, Mail::Address, MIME::Entity,
MIME::Parser, Crypt::CBC, Crypt::Blowfish, MIME::Base64,
Term::ReadPassword);

my ($mod, $mod_err, $mod_missing) = ('', '_off_', '');

for $mod (@needed) {

    print STDERR "Checking for '$mod'...\t";

    if (eval "require $mod") {

        $mod -> import();

        printf " Ok.\n";

    } else {

        print STDERR "CRITICAL ERROR: Module '$mod' WAS NOT FOUND !\n" ;

        $mod_err = '_on_';

        if ($mod_missing eq '') {

            $mod_missing .= $mod;

        } else {

            $mod_missing .= ", $mod";

        }
    }

}

if ($mod_err eq '_on_') {

    print STDERR "\nModules [$mod_missing] WAS NOT FOUND in your
system...\n";

    print STDERR "\nPlease INSTALL them before using ISPCP software !\n";

    exit 1;

} else {

    $| = 1;

}